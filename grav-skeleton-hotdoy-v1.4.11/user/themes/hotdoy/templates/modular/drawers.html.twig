{% extends '/partials/modular.html.twig' %}
{% set modular_name = 'drawers' %}

{% block modular_content %}
	<div class="site">
	{% for drawer in page.header.drawers %}
		<details class="drawer__detail" data-reveal="">
			<summary class="noselect drawer__summary">
				<h3 class="drawer__summary__title">{{ drawer.summary }}</h3>
				<div class="material-icons drawer__summary__icon">keyboard_arrow_down</div>
			</summary>
			<div class="drawer__content fadeinfromtop animation-delay-0 animation-duration-500">{{ drawer.detail|markdown }}</div>
		</details>
	{% endfor %}
	</div>
{% endblock %}
